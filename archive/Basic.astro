---
import {Toast}  from 'astro-bootstrap';
---
<!-- button to trigger -->
<button type="button" class="btn btn-primary" id="toastBasicDemoBtn">Show basic demo toast</button>
<!-- toast -->

<Toast.Container class="position-fixed bottom-0 end-0 p-3" >
  <Toast id="toastBasicDemo">
    <Toast.Header>
      <img src="/ab64x64.png" class="rounded me-2" alt="..." width="25" height="25">
      <strong class="me-auto">Bootstrap</strong>
      <small>11 mins ago</small>
      <Toast.Close />
    </Toast.Header>
    <Toast.Body>
      Hello, world! This is a toast message.
    </Toast.Body>
  </Toast>
</Toast.Container>
<script>
  import Toast from 'bootstrap/js/dist/Toast';
  const toastBasicTrigger = document.getElementById('toastBasicDemoBtn')
  const toastBasicDemo = document.getElementById('toastBasicDemo')
  if (toastBasicTrigger) {
    toastBasicTrigger.addEventListener('click', () => {
      const toast = new Toast(toastBasicDemo)
      toast.show()
    })
  }

</script>
