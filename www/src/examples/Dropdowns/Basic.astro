---
import { Dropdown } from 'astro-bootstrap';
const dropdowns: Dropdown[] = [
  {
    text: 'Action',
    href: '#',
  },
  {
    text: 'Another action',
    href: '#',
  },
  {
    text: 'Something else here',
    href: '#',
  },
];
export interface Dropdown {
  text: string;
  href: string;
}
---

<Dropdown>
  <Dropdown.Button variant="secondary">Dropdown button</Dropdown.Button>
  <Dropdown.Menu>
    {
      dropdowns.map((dropdown) => (
        <Dropdown.Item href={dropdown.href}>{dropdown.text}</Dropdown.Item>
      ))
    }
  </Dropdown.Menu>
</Dropdown>
