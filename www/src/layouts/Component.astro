---
const { title, subtitle } = Astro.props.frontmatter || Astro.props;
const { headings } = Astro.props;
export interface Props {
  title: string;
  headings: any;
}
import BaseLayout from './BaseLayout.astro';

import SideNav from '@components/SideNav.astro';
import Toc from '@components/Toc.astro';
---

<BaseLayout {title}>
  <div class="container-fluid">
    <div class="row flex-class">
      <div class="col-xl-8 col-lg-6 col-sm-4 col-12 py-2 px-3 main-column">
        <main>
          <h1 id="overview">{title}</h1>
          <p class="lead">{subtitle}</p>
          <slot />
        </main>
      </div>
      <div
        class="col-xl-2 col-lg-3 col-sm-4 col-12 left-column order-sm-first sticky-col py-2 px-2"
      >
        <SideNav />
      </div>
      <div
        class="col-xl-2 col-lg-3 col-sm-4 d-none d-sm-block sticky-col right-column py-2 px-2"
      >
        {headings && <Toc {headings} /> }
      </div>
    </div>
  </div>
</BaseLayout>
<style>
  .sticky-col {
    overflow: hidden;
    position: sticky;
    top: 4rem;
    height: calc(100vh - 4rem);
  }
</style>
