---
const { title, api } = Astro.props.frontmatter || Astro.props;
export interface Props {
  title: string;
}
import BaseLayout from './BaseLayout.astro';

import SideNav from '@components/SideNav.astro';
import Api from '@components/Api.astro';
---

<BaseLayout {title}>
  <div class="container-fluid">
    <div class="row flex-class">
      <div class="col-xl-10 col-lg-9 col-sm-8 col-12 p-5 right-column">
        <main>
          <h1>{title}</h1>
          <slot />
          { api && <Api data={api} />}
        </main>
      </div>
      <div
        class="col-xl-2 col-lg-3 col-sm-4 col-12 left-column order-sm-first sticky-col"
      >
        <SideNav />
      </div>
    </div>
  </div>
</BaseLayout>
<style>
  /* .flex-class {
    display: flex;
    flex-wrap: wrap;
  } */
  .sticky-col {
    overflow: hidden;
    position: sticky;
    top: 4rem;
    height: calc(100vh - 4rem);
  }
</style>
