---
import SideNavSuffix from './SideNavSuffix.astro';
import { ActiveLink } from 'astro-bootstrap';
const { elements } = Astro.props;
// export interface Props {
//   elements:
// }
---

{
  elements.map((element) => {
    let suffix = {};
    if (element.data.variant === 'component') {
      suffix = { class: 'text-astro', text: '.astro' };
    } else if (element.data.variant === 'js') {
      suffix = { class: 'text-warning', text: 'JS' };
    } else if (element.data.variant === 'template') {
      suffix = { class: 'text-success', text: 'template' };
    }
    return (
      <li>
        <ActiveLink href={`/components/${element.slug}`} class="text-decoration-none">
          {element.data.title}
          {suffix && <SideNavSuffix {...suffix} />}
        </ActiveLink>
      </li>
    );
  })
}

