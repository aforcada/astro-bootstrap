---
const {
  href: userHref,
  class: className,
  disabled,
  activeClass = 'active',
  disabledClass = 'disabled',
} = Astro.props;
const path = Astro.url.pathname;
const activeClassName = path === userHref ? activeClass : null;
const disabledClassName = disabled && disabledClass;
const ariaCurrent = activeClassName ? 'page' : null;
export interface Props {
  href: string;
  class?: string;
  disabled?: boolean;
  activeClass?: string;
  disabledClass?: string;
}

const tabIndex = disabled && '-1';
const href = disabled ?? userHref;
---

<a
  {href}
  class:list={[
    className,
    activeClassName,
    disabledClassName,
    { 'cursor-default': disabled },
  ]}
  aria-current={ariaCurrent}
  tabindex={tabIndex}><slot /></a
>
<style>
  .cursor-default {
    cursor: default;
  }
</style>
