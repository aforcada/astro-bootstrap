---
import Marked from '../utils/Marked.astro';
const { href, text, class: className } = Astro.props;
export interface Props {
  href: string;
  text?: string;
  class?: string;
}
---

<a {href} class:list={['alert-link', className]}
  ><Marked inline><slot><Fragment set:html={text} /></slot></Marked></a
>
